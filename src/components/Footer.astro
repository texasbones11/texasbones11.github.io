<style>
  /* 
      Footer base styles
      Light background with subtle top border
      Centered content with padding
    */
  .footer {
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 1.5rem;
    background: #f9f9f9;
    border-top: 1px solid #e0e0e0;
  }

  /* 
      Footer content container
      Centers all child elements
    */
  .footer-content {
    text-align: center;
  }

  /* 
      Call-to-action text
      Standard font size with bottom margin
    */
  .footer-text {
    font-size: 1rem;
    color: #333;
    margin-bottom: 1rem;
  }

  /* 
      Social buttons container
      Flex layout with consistent spacing
    */
  .footer-buttons {
    display: flex;
    gap: 1.5rem;
    justify-content: center;
  }

  /* 
      Individual social button styles
      Circular shape with hover effects
      Accessible contrast colors
    */
  .footer-button {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background: #333;
    color: white;
    transition:
      background 0.3s ease,
      transform 0.3s ease;
  }

  /* 
      Button hover state
      Darker background with subtle lift effect
    */
  .footer-button:hover {
    background: #555;
    transform: translateY(-2px);
  }

  /* 
      SVG icon sizing
      Matches button dimensions
    */
  .footer-button svg {
    width: 24px;
    height: 24px;
  }

  /* 
      Copyright text
      Additional padding for separation
    */
  .copyright-text {
    padding: 1.5rem;
    text-align: center;
  }

  /* 
      Mobile responsive adjustments
      Smaller buttons and spacing on small screens
    */
  @media (max-width: 480px) {
    .footer-buttons {
      gap: 1rem;
    }

    .footer-button {
      width: 36px;
      height: 36px;
    }

    .footer-button svg {
      width: 20px;
      height: 20px;
    }
  }
</style>
